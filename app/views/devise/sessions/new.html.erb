<div class="container d-flex align-items-center justify-content-center py-5 px-4">
  <div class="max-w-md w-100 space-y-4">
    <div class="text-center">
      <img src="<%= asset_path("logo.svg") %>" alt="Bootstrap" width="200">
      <h2 class="mt-4 text-center text-3xl font-extrabold text-dark">
        Sign in to your account
      </h2>
      <% if devise_mapping.registerable? && controller_name != 'registrations' %>
        <p class="mt-2 text-center text-sm text-dark">
          Or <%= link_to "sign up", new_registration_path(resource_name), class: "font-medium text-primary hover:text-primary-dark" %>
        </p>
      <% end %>
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { data: { turbo: false} }) do |f| %>
      <div class="mt-4 space-y-2">
        <%= f.hidden_field :remember, value: "true" %>
        <div class="rounded-md shadow-sm">
          <div>
            <%= f.label :email, class: "sr-only" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email address", class: "form-control" %>
          </div>
          <div>
            <%= f.label :password, class: "sr-only" %>
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-control" %>
          </div>
        </div>
        <div class="actions mt-4">
          <%= f.submit "Log in", class: "btn btn-primary w-100" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
