<div class="container mx-auto mt-5">
    <h1 class="display-4 font-weight-bold mb-4"><%= t('banks.show.title') %>: <%= @bank.name %></h1>

    <p class="text-muted"><%= t('banks.shared.bank_id') %>: <%= @bank.id %></p>

    <div class="mt-4">
        <%= link_to t('banks.shared.edit'), edit_bank_path(@bank), class: "btn btn-warning text-white mr-2" %>
        <%= link_to t('banks.shared.back_to_banks'), banks_path, class: "btn btn-primary" %>
    </div>
</div>
