<div class="container mx-auto">
  <h1 class="display-4 font-bold mb-4"><%= t('suppliers.show.title') %>:</h1>
  <h2 class="h4"><%= @supplier.name %></h2>

  <p class="text-muted"><%= t('suppliers.shared.supplier_id') %>: <%= @supplier.id %></p>
  <p class="text-muted"><%= t('suppliers.show.nit') %>: <%= @supplier.nit %></p>
  <p class="text-muted"><%= t('suppliers.show.contact_name') %>: <%= @supplier.contact_name %></p>
  <p class="text-muted"><%= t('suppliers.show.contact_phone') %>: <%= @supplier.contact_phone %></p>
  <p class="text-muted"><%= t('suppliers.show.account_number') %>: <%= @supplier.account_number %></p>
  <p class="text-muted"><%= t('suppliers.show.bank_id') %>: <%= @supplier.bank_id %></p>
  <p class="text-muted"><%= t('suppliers.show.name') %>: <%= @supplier.bank.name %></p>

  <div class="mt-4">
    <%= link_to t('suppliers.shared.edit'), edit_supplier_path(@supplier), class: "btn btn-warning mr-2" %>
    <%= link_to t('suppliers.shared.back_to_suppliers'), suppliers_path, class: "btn btn-primary" %>
  </div>
</div>
