<div class="container mx-auto">
  <h1 class="text-3xl font-bold mb-4"><%= t('suppliers.show.title') %>:</h1>
  <h2><%= @supplier.name %></h2>

  <p class="text-gray-600"><%= t('suppliers.shared.supplier_id') %>: <%= @supplier.id %></p>
  <p class="text-gray-600"><%= t('suppliers.show.nit') %>: <%= @supplier.nit %></p>
  <p class="text-gray-600"><%= t('suppliers.show.contact_name') %>: <%= @supplier.contact_name %></p>
  <p class="text-gray-600"><%= t('suppliers.show.contact_phone') %>: <%= @supplier.contact_phone %></p>
  <p class="text-gray-600"><%= t('suppliers.show.account_number') %>: <%= @supplier.account_number %></p>
  <p class="text-gray-600"><%= t('suppliers.show.bank_id') %>: <%= @supplier.bank_id %></p>
  <p class="text-gray-600"><%= t('suppliers.show.name') %>: <%= @supplier.bank.name %></p>

  <%= link_to t('suppliers.shared.edit'), edit_supplier_path(@supplier), class: "text-yellow-500 hover:underline mr-2" %>
  <%= link_to t('suppliers.shared.back_to_suppliers'), suppliers_path, class: "text-blue-500 hover:underline" %>
</div>
